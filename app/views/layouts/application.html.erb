<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Crooks" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>

  <%= render "layouts/navbar" %>
  <nav>
        <ul>
          <li>
            Cart 
            <% if cart.present? %> 
              <sup><%= session[:cart].length %></sup>
              <ul> 
                <% cart.each do |product| %> 
                  <li>
                    <tr>
                      <td><%= product[:product].name %> x <%= product[:quantity] %> 
                        <%= button_to cart_path(product[:product]), method: :delete do%>Remove from cart
                        <% end %>
                      </td>
                      <td>
                      <%= form_with url: cart_path(product[:product]), method: :patch do |form| %>
                        <%= form.number_field :quantity, in: 1..20, step: 1, value: product[:quantity] %>
                        <%= form.submit "Update Quantity" %>
                      <% end %>
                      </td>
                    </tr>
                    
                  </li>
                <% end %>
              </ul>
            <% end %>
          </li>
        </ul>
      </nav>

  <body>
    <%= yield %>
  </body>
</html>
